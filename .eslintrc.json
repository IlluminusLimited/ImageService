{
  "env": {
    "browser": false,
    "node": true,
    "es6": true,
    "mocha":true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": [
      "warn",
      {
        "allow": [
          "log",
          "warn",
          "error"
        ]
      }
    ]
  }
}